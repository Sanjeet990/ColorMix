<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.gravity.colormixapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting color: " />

        <EditText
            android:id="@+id/initcoloralpha"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#ffcccccc"
            android:textColor="#ffffffff"
            android:padding="6dp"
            android:layout_marginLeft="6dp"
            android:text="200" />

        <EditText
            android:id="@+id/initcolorred"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#ffff0000"
            android:textColor="#ffffffff"
            android:padding="6dp"
            android:layout_marginLeft="6dp"
            android:text="200" />

        <EditText
            android:id="@+id/initcolorgreen"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#ff00ff00"
            android:textColor="#ffffffff"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:text="200" />

        <EditText
            android:id="@+id/initcolorblue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#ff0000ff"
            android:textColor="#ffffffff"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:text="200" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alpha channel (transparency)" />

    <CheckBox
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color preview" />

    <CheckBox
        android:id="@+id/advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show color dots" />

    <Button
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select color" />

    <LinearLayout
        android:id="@+id/pallate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:gravity="center">

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected color" />

    </LinearLayout>

</LinearLayout>
