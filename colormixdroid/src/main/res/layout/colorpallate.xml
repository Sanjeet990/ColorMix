<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/color_preview"
        android:layout_width="match_parent"
        android:layout_height="100.0dip"
        android:background="@drawable/transparent_bg"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/color_display"
            android:layout_width="match_parent"
            android:layout_height="100.0dip"
            android:background="#ffff0000"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18.0dip"
        android:paddingBottom="35.0dip" >

        <SeekBar
            android:id="@+id/seek_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"
            android:max="255" />

        <SeekBar
            android:id="@+id/seek_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"
            android:max="255" />

        <SeekBar
            android:id="@+id/seek_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"
            android:max="255" />

        <LinearLayout
            android:id="@+id/alpha_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"
            android:visibility="gone" >

            <SeekBar
                android:id="@+id/seek_alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>